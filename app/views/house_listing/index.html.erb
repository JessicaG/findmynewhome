<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<div class="row">
  <div class="large-9 push-4 columns">
    <h3>Find my new Colorado Home!</h3>
    <ul class="filter" style="margin-bottom:0px">
      <li class="btn" id="filter-none">Show all</li>
      <p style="display:inline-block">House:</p>
      <form action="" style="display:inline-block">
        <select multiple name="filter" id="city-filter" class="chosen-select">
          <% @houses.map(&:city).uniq do |city| %>
            <option value="<%=city%>"><%=city%></option>
          <% end %>
        </select>
      </form>
    <div class="large-3 pull-10 columns">
    <ul class="side-nav">
      <li><input class="search" placeholder="Search All Fields" /></li>
      <li><span class="sort" data-sort="city" style="display:inline-block">Sort by City</span></li>
    </ul>
  </div>
</div>
</div>

<div style='width:800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>

<script>
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%=raw @hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});
</script>
